<div class='row recipe-new-container'>
<div class='col s12'>
  <div class='recipe-container'>

    <%= form_tag(recipes_path, method: 'POST', id: 'recipe-new-form') do %>
    <div class='row'>
      <div class='offset-s5 col s7'>
        <h4 class='blue-text'>Create Recipe</h4>
      </div>
      <div class='input-field col s7 offset-s5'>
        <label for="name" class="blue-text">Name</label>
        <input id="name" name="name" type="text" class="validate black-text" maxlength="30" minlength="1">
      </div>
    </div>
    <div class='row'>
      <div class='offset-s5 col s7 input-field'>
        <textarea id="description" class="materialize-textarea validate" name="description" maxlength="180" minlength="5"></textarea>
        <label for="textarea1">Description</label>
      </div>
    </div>
    <div class='row'>
      <div class='col s7 offset-s5 input-field'>
        <input type="submit" value="Create" class="waves-effect waves-light btn #039be5 light-blue darken-1", id="recipe-new-submit-btn">
      </div>
    </div>
    <% end %>
  </div>
</div>
</div>
