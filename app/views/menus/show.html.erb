<div>
  <h2><%= @menu['title'] %></h2>

  <% if @recipes.any? %>
    <table>
      <tbody>
        <% @recipes.each do |recipe| %>
          <tr>
            <td><%= link_to "#{recipe['name']}", recipe_path(recipe['id']) %></td>
            <% if admin? %>
              <td><%= link_to 'Edit', edit_recipe_path(recipe['id']), :class => "waves-effect waves-light btn #e53935 red-darken-1", id: 'recipe-edit-btn' %></td>
              <td><%= link_to 'Delete', menu_recipe_path(@menu['id'], recipe['id']), method: :delete, :class => "waves-effect waves-light btn #e53935 red-darken-1", id: 'recipe-delete-btn' %></td>
            <% end %>
          </tr>
        <% end %>
        </tbody>
    </table>
  <% else %>
    <p>This menu contains no recipes.</p>
  <% end %>

  <% if admin? %>
    <section>
      <% if @recipes.empty? %>
        <%= link_to 'Create Recipe', new_recipe_path, :class => "waves-effect waves-light btn #e53935 red-darken-1", id: 'recipe-new-btn' %>
      <% else %>
        <%= link_to 'Add Recipe', new_menu_recipe_path(@menu['id']), :class => "waves-effect waves-light btn #e53935 red-darken-1", id: 'menu_recipe-new-btn' %>
      <% end %>
    </section>
  <% end %>
</div>
